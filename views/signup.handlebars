<section class="vh-100" style="background-color: #2779e2;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-9">

        <h1 class="text-white mb-4">Sign up on Tech Blog</h1>

        <div class="card" style="border-radius: 15px;">
          <div class="card-body">
            <form class="signup-form">

              <div class="row align-items-center pt-4 pb-3">
                <div class="col-md-3 ps-5">

                  <h6 class="mb-0">
                    <label for="username-signup">UserName</label></h6>

                </div>
                <div class="col-md-9 pe-5">

                  <input
                    type="text"
                    id="username-signup"
                    class="form-control form-control-lg"
                  />

                </div>
              </div>

              <hr class="mx-n3" />

              <div class="row align-items-center py-3">
                <div class="col-md-3 ps-5">

                  <label for="email-signup" class="mb-0">Email address</label>

                </div>
                <div class="col-md-9 pe-5">

                  <input
                    type="email"
                    class="form-control form-control-lg"
                    placeholder="example@example.com"
                    id="email-signup"
                  />

                </div>
              </div>

              <hr class="mx-n3" />

              <div class="row align-items-center py-3">
                <div class="col-md-3 ps-5">

                  <label class="mb-0">GitHub</label>

                </div>
                <div class="col-md-9 pe-5">

                  <input
                    type="text"
                    class="form-control form-control-lg"
                    id="github-signup"
                  />

                </div>
              </div>

              <hr class="mx-n3" />

              <div class="row align-items-center py-3">
                <div class="col-md-3 ps-5">

                  <label class="mb-0">Password</label>

                </div>
                <div class="col-md-9 pe-5">

                  <input
                    type="password"
                    class="form-control form-control-lg"
                    placeholder=""
                    id="password-signup"
                  />

                </div>
              </div>

              <hr class="mx-n3" />

              <div class="px-5 py-4">
                <button type="submit" class="btn btn-primary btn-lg">Send
                  application</button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<script src="/js/signup.js"></script>