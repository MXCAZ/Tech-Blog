<section class="vh-100" style="background-color: #2779e2;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-9">

        <h1 class="text-white mb-4">Create a new post</h1>

        <div class="card" style="border-radius: 15px;">
          <div class="card-body">
            <form class="new-post-form">

              <div class="row align-items-center pt-4 pb-3">
                <div class="col-md-3 ps-5">

                  <h6 class="mb-0">
                    <label for="post-title">Title</label></h6>

                </div>
                <div class="col-md-9 pe-5">

                  <input
                    type="text"
                    id="post-title"
                    class="form-control form-control-lg"
                  />

                </div>
              </div>

              <hr class="mx-n3" />

              <div class="row align-items-center py-3">
                <div class="col-md-3 ps-5">

                  <label for="post-content" class="mb-0">Content</label>

                </div>
                <div class="col-md-9 pe-5">

                  <textarea
                    class="form-control"
                    placeholder="Leave a comment here"
                    id="post-content"
                  ></textarea>

                </div>
              </div>

              <hr class="mx-n3" />

              <div class="px-5 py-4">
                <button type="submit" class="btn btn-primary btn-lg">Create Post</button>
              </div>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<script src="/js/add-poss.js"></script>