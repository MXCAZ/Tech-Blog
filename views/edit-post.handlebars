
<article>
<div class="text-end">
   <a href="/dashboard"  style="color: black; text-decoration: none " > &larr; back to dashboard</a>
  </div>
  <h2 class="title mt-5">Edit post</h2><hr>
  <form class="edit-post-form">
   

 <div>
  <div>
        <label for="post-title">Post title:</label>
        </div>
      <input class="form-control " name="post-title" type="text" value="{{post.title}}" />
    </div>


 <div>
  <div>
        <label for="post-content">Post content:</label>
        </div>
      <input class="form-control input-lg textarea "  style="height:100px"   name="post-content" type="text" value="{{post.post_content}}" />
    </div>


      |<div class="text-end">
       Created by You on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
 
     
    </div>
   <div class="text-end mt-2 mb-2">
  <button type="submit" class="btn btn-success">Save Post</button>
  <button type="button" class="btn btn-danger delete-post-btn">Delete Post</button>
  </form>
</div>
  </form>
</article>

    
{{> comments post.comments}}


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
